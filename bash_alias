# Colori {{{
if [[ $color_prompt == "yes" ]]; then 
    alias ls='ls --color=auto --group-directories-first -h'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
else
    alias ls='ls --group-directories-first -h'
fi
# }}}

# Troppo lunghi da scrivere {{{
alias l='pwd;ls --group-directories-first -l -h -X'
alias gi="gvim"
alias o="xdg-open"
alias t="tree . -L 1"
alias tt="tree . -L 2"
alias ttt="tree . -L 3"
alias h="man"
alias pfind="bash /home/vic/Dotfiles/bin/pfind"
alias p="pass"
alias gtd="bash ~/Scaricati/Apps/gtd/gtd -n"
alias bashr="source ~/.bashrc"
alias ssh-serverino="pass -c Casa/serverino-user && ssh user@192.168.1.197"
alias pandoc="pandoc --latex-engine=lualatex -H ~/Modelli/settings.tex -S"
alias gcal="gcalcli --calendar=\"Personale\""
alias atls="atq"
alias fdate="date +%F -d"
alias xmo="xmodmap ~/Dotfiles/Xmodmap"
# }}}

