#! /bin/bash
IFS=$'\n'

if [[ $# -gt 0 ]]; then
    echo "mv $1 x $1"
    read _ && mv "$1" "x $1"
else
    completate=$(ls *pdf | grep ^x | wc -l)
    da_fare=$(ls *pdf | wc -l)
    echo "Completate $completate/$da_fare sbobine"
    echo $(python -c "print float($completate)/$da_fare*100)%. Ne mancano $(python -c "print($da_fare - $completate)")
    echo $(( $(for f in $(find *pdf | grep -v ^x); do pdfinfo "$f" | grep Pages:; done | sed "s/Pages:          //" | tr "\n" "+")0 )) pagine rimanenti
fi
