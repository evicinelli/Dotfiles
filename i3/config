# MODES {{{
	set $sysmenu "Exit - Halt - Reboot - Susped - Lock"
	bindsym $mod+Delete mode $sysmenu
	mode $sysmenu {
		bindsym r         restart
		bindsym e         exec --no-startup-id "i3-nagbar -t warning -m 'Logout?' -b 'S' 'i3-msg exit'"
		bindsym h         exec --no-startup-id shutdown -P now
		bindsym b         exec --no-startup-id shutdown -r now
		bindsym s         exec --no-startup-id systemctl suspend;
		bindsym l         exec --no-startup-id i3lock 

		bindsym Return    mode "default"
		bindsym Escape    mode "default"
	}

	bindsym $mod+r mode "resize"
	mode "resize" {
		bindsym $Left resize shrink width 2 px or 2 ppt
		bindsym $Down resize shrink height 2 px or 2 ppt
		bindsym $Up resize grow height 2 px or 2 ppt
		bindsym $Right resize grow width 2 px or 2 ppt

		# back to normal: Enter or Escape
		bindsym Return mode "default"
		bindsym Escape mode "default"
	}
# }}}

