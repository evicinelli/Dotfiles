# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# # label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=20
markup=none
separator="-"
align=center

[mediaplayer]
instance=spotify
interval=1
signal=10
color=#4848484

[volume]
instance=Master
interval=1
signal=10

[battery]
instance=0
interval=30

[temperature]
interval=10

[load_average]
interval=1

[time]
command=date '+%a %d %H:%M |'
interval=10
