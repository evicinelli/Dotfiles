% Make `pandoc -H` work
$for(header-includes)$
    $header-includes$
$endfor$

\begin{document}
    % Title
    $if(title)$
    \maketitle
    $endif$

    % Abstract
    $if(abstract)$
        \begin{abstract}
            $abstract$
        \end{abstract}
    $endif$

    % Body
    $body$

    % Bibliography
    $if(natbib)$
    $if(bibliography)$
    $if(biblio-title)$
        $if(book-class)$
            \renewcommand\bibname{$biblio-title$}
        $else$
            \renewcommand\refname{$biblio-title$}
        $endif$
    $endif$
    $endif$
    $endif$

    $if(biblatex)$
        \printbibliography$if(biblio-title)$[title=$biblio-title$]$endif$
    $endif$
\end{document}
